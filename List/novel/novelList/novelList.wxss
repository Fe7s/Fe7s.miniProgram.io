/**index.wxss**/
.swiper{
  height: 400rpx;
}

.swiper swiper-item image{
  width: 100%;
  height: 100%;
}

.swiper swiper-item .title{
  display: block;
  width: 100%;
  height: 70rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  background: rgb(221, 210, 210);
  color: white;
  padding: 10rpx;
}

.story-item{
  width: 90%;
  height: 250rpx;
  box-shadow: 0 0 5rpx 0 gainsboro;
  margin: 10rpx auto;
  position: relative;
}

.story-item-left{
  width: 68%;
  height: 100%;
  position: relative;
  padding: 0 0 0 ; 

}

.story-item-left-title{
  width: 100%;
  
  word-wrap: break-word;
  display: inline-block;
  padding: 20rpx 0;
}

.story-item-left-author{
  width: 100%;
}

.story-item-right{
  width: 30%;
  height: 95%;
  top: 2.5%;
  right: 0;
  position: absolute;

}
.story-item-right-image{
  width: 100%;
  height: 100%;
}